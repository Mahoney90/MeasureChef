<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_of_row"
    android:layout_marginBottom="10dp"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
>

    <EditText
        android:id="@+id/converting_measurement_edit_2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"
        android:focusable="true"
        android:background="@drawable/ripple"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#010101"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/converting_measurement_text_2"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="fill_parent"
        android:textColor="#010101"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/converted_measurement_edit_2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:textColor="#feb6071e"
        android:layout_weight="1"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/converted_measurement_text_2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:textSize="18sp"

        />

        </LinearLayout>



</LinearLayout>